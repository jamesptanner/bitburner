{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "esModuleInterop": true,
        "sourceRoot": "http://localhost:8000/sources/",
        "strict": true,
        "rootDir": "src/",
        "outDir": "build/",
        "baseUrl": "src/",
        "paths": {
          "/*": [
            "*"
          ],
          "@ns": [
            "../NetscriptDefinitions.d.ts",
            "../global.d.ts",
          ]
        }
    },
    "include": [
        "NetscriptDefinitions.d.ts",
        "global.d.ts",
        "src/**/*",
    ],
    "exclude": [
        "node_modules",
        "build"
    ],
    "typedocOptions":{
      "entryPoints": ["NetscriptDefinitions.d.ts"],
      "out": "docs"
    }


}